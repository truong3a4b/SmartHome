<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_checked="true">
    <shape
        android:shape="rectangle">

        <solid android:color="#FFFFFF"/> <!-- Màu nền -->

        <corners android:radius="50dp"/> <!-- Bo tròn -->

        <padding
            android:left="2dp"
            android:top="2dp"
            android:right="2dp"
            android:bottom="2dp"
            />

        <gradient
            android:startColor="#41BF2B"
            android:centerColor="#66DD55"
            android:endColor="#66DD55"
            android:angle="270"/>
    </shape>
</item>
