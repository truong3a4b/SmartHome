<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#66DD55" /> <!-- Màu xanh khi bật -->
            <corners android:radius="20dp" />
            <padding
                android:left="2dp"
                android:top="4dp"
                android:right="2dp"
                android:bottom="4dp" />
            <gradient
                android:startColor="#41BF2B"
                android:centerColor="#66DD55"
                android:endColor="#66DD55"
                android:angle="270"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="20dp" />
            <padding
                android:left="2dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="2dp" />
            <gradient
                android:startColor="#BFBFBF"
                android:centerColor="#D9D9D9"
                android:endColor="#D9D9D9"
                android:angle="270"/>

        </shape>
    </item>
</selector>
